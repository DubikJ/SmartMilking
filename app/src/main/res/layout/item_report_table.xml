<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/report_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.87"
            android:background="@drawable/shape_table_cell_left"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_middle"/>

        <TextView
            android:id="@+id/report_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.19"
            android:background="@drawable/shape_table_cell"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_middle"/>

        <TextView
            android:id="@+id/report_machine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_table_cell"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_middle"/>

        <TextView
            android:id="@+id/report_cow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_table_cell"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_middle"/>

        <TextView
            android:id="@+id/report_litres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_table_cell_right"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_middle"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>