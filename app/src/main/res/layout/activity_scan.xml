<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#AA000000"
              android:gravity="center"
              android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_margin="5dp">

        <LinearLayout
            android:id="@+id/scan_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:id="@+id/layout_machine"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/id_machine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_very_big"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/machine_item_cap_marging"/>

                <TextView
                    android:id="@+id/scan_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/scan"
                    android:textSize="@dimen/text_size_big"
                    android:textColor="@color/colorWhite"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/image_scan"
                android:layout_width="@dimen/milking_scan_size_heigh_icon"
                android:layout_height="@dimen/milking_scan_size_weight_icon"
                android:padding="10dp"
                android:background="@drawable/ic_signal">

                <View
                    android:id="@+id/bar_scan"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@color/colorWhite"/>
            </LinearLayout>

            <TextView
                android:id="@+id/scan_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>